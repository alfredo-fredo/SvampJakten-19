<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_create_account"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_fragment_background"
    tools:context=".NewAccountFragment">

    <TextView
        android:id="@+id/create_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="200dp"
        android:text="Create a new account "
        android:textAlignment="center"
        android:textColor="@color/ghost_white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/create_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_label"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:width="200dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:width="200dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/create_password_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:width="200dp"
        android:hint="Repeat password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_password_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:width="200dp"
        android:background="@drawable/rounded_button"
        android:text="Create account"
        android:textColor="@color/login_color_background" />

    <TextView
        android:id="@+id/create_go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_button"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Or login"
        android:textAlignment="center"
        android:width="200dp"
        android:textSize="18sp" />
</RelativeLayout>